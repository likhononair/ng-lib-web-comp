{
  "name": "ng-lib-web-comp",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve hello-world-element",
    "build": "ng build hello-world-web-component",
    "build:element": "ng build hello-world-element --configuration production",
    "build:element:concat": "npm run build:element && npm run concat:element",
    "concat:element": "node scripts/concat-bundle.js",
    "build:all": "npm run build && npm run build:element:concat",
    "watch": "ng build --watch --configuration development",
    "test": "ng test hello-world-web-component",
    "test:element": "ng test hello-world-element",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/elements": "^21.0.5",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.5",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "concat": "^1.0.3",
    "husky": "^9.0.0",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
